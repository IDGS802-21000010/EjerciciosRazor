@page
@model ProgramasRazorII.Pages.Programa1Model
@{
}

<h3>Índice de Masa Corporal (IMC)</h3>

<form method="post">
    <p>Peso: <input type="number" step="0.1" asp-for="peso" /></p>
    <p>Altura: <input type="number" step="0.1" asp-for="altura" /></p>
    <p><input type="submit" value="Calcular" /></p>

    @if (Model.imc < 18)
    {
        <div>
            <strong>IMC = @Model.imc. Peso Bajo</strong>
        </div>
    }
    else if (Model.imc >= 18 && Model.imc < 25)
    {
        <div>
            <strong>IMC = @Model.imc. Peso Normal</strong>
        </div>
    }
    else if (Model.imc >= 25 && Model.imc < 27)
    {
        <div>
            <strong>IMC = @Model.imc. Sobre peso</strong>
        </div>
    }
    else if (Model.imc >= 27 && Model.imc < 30)
    {
        <div>
            <strong>IMC = @Model.imc. Obesidad grado I</strong>
        </div>
    }
    else if (Model.imc >= 30 && Model.imc < 40)
    {
        <div>
            <strong>IMC = @Model.imc. Obesidad grado II</strong>
        </div>
    }
    else
    {
        <div>
            <strong>IMC = @Model.imc. Obesidad grado III</strong>
        </div>
    }
</form>