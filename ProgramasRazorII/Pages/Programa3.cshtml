@page
@model ProgramasRazorII.Pages.Programa3Model
@{
}

<h3>(ax + by)^n</h3>

<form method="post">
    <p>Valor de a: <input type="number" step="0.1" asp-for="va" /></p>
    <p>Valor de b: <input type="number" step="0.1" asp-for="vb" /></p>
    <p>Valor de x: <input type="number" step="0.1" asp-for="vx" /></p>
    <p>Valor de y: <input type="number" step="0.1" asp-for="vy" /></p>
    <p>Valor de n: <input type="number" step="0.1" asp-for="vn" /></p>

    <p><input type="submit" value="Calcular" /></p>
</form>
@if (Model.res != 0)
{
    <div>
        <strong>Resultado = @Model.res</strong>
    </div>
    <div>
        <strong>Resultado largo = @Model.res2</strong>
    </div>
}
